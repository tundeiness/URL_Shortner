

  <div class='flex flex-col w-full border border-slate-500'>
    <h1>URL SHORTNER</h1>
    <div class='flex flex-col'>
      <%# <%= form_for Url.new, url: '/urls' do |form| %> %>
      <%= form_with url:  '/urls'  do |form| %>
      <%# <%= form_with model:  @url  do |form| %> %>
        <div class='input-group'>
          <%= form.text_field :name, class: 'form-control', placeholder: 'Enter the URL'  %>
          <%= form.submit "Shorten URL", class: "btn btn-outline-secondary" %>
        </div>
      <%end%>

      <% flash.each do |type, msg| %>
        <div class='alert <%= "#{flash_html_class(type)} py-1 mt-3 border border-solid" %>'>
          <%= msg.html_safe %>
        </div>
      <% end %>
    </div>
  </div>
