
<%= form_with model: @links, url: '/links' do |f| %>
  <%= f.label :original_url, "Link to Shorten" %>
  <%= f.text_field :original_url%>
  <%= f.submit "Shorten" %>
<% end %>

<%= render partial: 'shared/flashes' %>

<div class='container-fluid'>
      <div class='row py-3 px-3'>
        <div class='col-12 col-sm-8'>
          <h3 class=''>Links</h3>
          <table id='link-table' class="table table-hover">
            <thead  class="thead-light">
              <tr>
                <th>Original Url</th>
                <th>Slug</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @links.each do |link| %>
                <tr>
                  <td><%= link.original_url %></td>
                  <td><%= link.slug %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <br>
        </div>

      </div>
    </div>

